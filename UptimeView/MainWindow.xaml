<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UptimeView"
        xmlns:Collections="clr-namespace:System.Collections;assembly=System.Collections.NonGeneric" x:Class="UptimeView.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Uptime">
                <Grid Background="#FFE5E5E5">
                    <Label x:Name="WeekTextBox" Content="Week: 52" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                    <DataGrid x:Name="UptimeDataGrid" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,41,10,10" SelectionChanged="DataGrid_SelectionChanged">
                        <DataGrid.ItemsSource>
                            <Collections:SortedList/>
                        </DataGrid.ItemsSource>
                    </DataGrid>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
